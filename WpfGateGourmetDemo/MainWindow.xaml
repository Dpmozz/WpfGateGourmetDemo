<Window x:Class="WpfGourmetDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGourmetDemo"
        mc:Ignorable="d"
        Title="GourmetDemo" Height="450" Width="800" Closed="Window_Closed">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Top row (Image) -->
            <RowDefinition Height="Auto" />
            <!-- Bottom row (TextBox) -->
        </Grid.RowDefinitions>

        <!-- Viewbox containing Image in the top row -->
        <Viewbox Grid.Row="0">
                <Image x:Name="imgControl" Stretch="Uniform"/>
        </Viewbox>
        <!-- TextBox in the bottom row -->
        <TextBox x:Name="txbStatus" Grid.Row="1" Margin="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="18" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" Focusable="False" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}"/>
    </Grid>
</Window>
